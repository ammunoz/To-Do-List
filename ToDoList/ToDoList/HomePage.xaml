<UserControl x:Class="ToDoList.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="250">
    <Grid Background="White">
        <StackPanel x:Name="Menu" HorizontalAlignment="Left" Height="145" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" MouseEnter="Menu_MouseEnter" MouseLeave="Menu_MouseLeave">
            <Label x:Name="menuLabel" Content="=" MouseEnter="menuLabel_MouseEnter"/>
            <Label x:Name="editButton" Content="Edit"/>
            <Label x:Name="sortButton" Content="Sort"/>
            <Label x:Name="calendarButton" Content="Calendar"/>
            <Label x:Name="closeButton" Content="Close" Height="24"/>
        </StackPanel>
        
        
        <StackPanel x:Name="createMenu" HorizontalAlignment="Left" Height="76" Margin="159,10,0,0" VerticalAlignment="Top" Width="71" MouseLeave="createMenu_MouseLeave">
            <Label x:Name="createLabel" Content="+" MouseEnter="createLabel_MouseEnter" HorizontalContentAlignment="Center"/>
            <Label x:Name="createLabel1" Content="Create Task"/>
        </StackPanel>

    </Grid>
</UserControl>
