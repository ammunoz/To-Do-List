<Window x:Class="ToDoList.AddClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Class" Height="125" Width="250"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered">
    <Canvas>
        <TextBox x:Name="addClassBox" Height="23" Canvas.Left="61" TextWrapping="Wrap" Text="Class Name" Canvas.Top="23" Width="120" GotFocus="addClassBox_GotFocus" LostFocus="addClassBox_LostFocus"/>
        <Button x:Name="doneButton" IsDefault="True" Content="Done" Canvas.Left="139" Canvas.Top="64" Width="75" MouseDown="doneButton_MouseDown" Click="doneButton_Click"/>
        <Button x:Name="cancelButton" IsCancel="True" Content="Cancel" Canvas.Left="34" Canvas.Top="64" Width="75"/>
    </Canvas>
</Window>
